<?xml version="1.0" encoding="utf-8" ?>

<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="region" surround="true" invoke="manual">
		<point name="name">
			<hint>
				region name
			</hint>
			<text>
				MyRegion
			</text>
		</point>
		<description>
			create or surround code with a region
		</description>
		<author>
			Embarcadero
		</author>
		<code language="Delphi" delimiter="|"><![CDATA[{$REGION '|name|'}
|selected|
{$ENDREGION}
]]>
		</code>
	</template>
</codetemplate>

